---
import { SITE_TITLE } from '../consts';

const { pathname } = Astro.url;
const isHome = pathname === '/';
---

<header class="mx-auto my-8 max-w-4xl lg:text-lg">
  {
    isHome ? (
      <h1 class="text-4xl font-bold">
        <a href="/">{SITE_TITLE}</a>
      </h1>
    ) : (
      <h2 class="text-2xl font-bold">
        <a href="/">{SITE_TITLE}</a>
      </h2>
    )
  }
</header>
