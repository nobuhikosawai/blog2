---
import { SITE_TITLE } from '../consts';

const { pathname } = Astro.url
const isHome = pathname === '/'
---

<header class="mx-auto max-w-4xl lg:text-lg my-8">
  {isHome ?
    <h1 class="font-bold text-4xl">
      <a href="/">{SITE_TITLE}</a>
    </h1> :
    <h2 class="font-bold text-2xl">
      <a href="/">{SITE_TITLE}</a>
    </h2>  
  }
</header>
